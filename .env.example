# JamSync Frontend Environment Variables
# Copy this to .env.local and fill in your values

# API URL - Update to production URL after backend deployment
NEXT_PUBLIC_API_URL=https://api.jamsync.com/api/v1

# Backend URL - For direct backend API calls
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-in-production

# Google OAuth - Get credentials at https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth - Get credentials at https://developer.apple.com/
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Optional: Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Optional: Cloudflare Analytics (Workers)
NEXT_PUBLIC_WORKERS_URL=https://jamsync-workers.YOUR_SUBDOMAIN.workers.dev

# Feature Flags
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_MAX_VIDEO_DURATION=60
